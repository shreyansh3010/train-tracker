<style>
    #train_no {
        padding: 3px 10px;
        background-color: #2475B0;
        color: #ffffff;
        border-radius: 3px;
    }

    #source,
    #destination {
        font-size: 1.8em;
    }

    #arrow {
        width: 100%;
        height: auto;
    }

    @media (max-width: 720px) {
        #arrow {
            margin-top: 0.6em;
        }
    }

    .example {
        position: relative;
        width: 100%;
        height: 50px;
    }

    .example p {
        margin-left: 25px;
        position: absolute;
        margin-top: -7px;
    }

    .dot:before {
        content: ' ';
        position: absolute;
        z-index: 2;
        left: 0;
        top: 0;
        width: 10px;
        height: 10px;
        background-color: #2ecc72;
        border-radius: 50%;
    }

    .dot:after {
        content: ' ';
        position: absolute;
        z-index: 1;
        width: 10px;
        height: 10px;
        background-color: #2ecc72;
        border-radius: 50%;
        box-shadow: 0 0 10px rgba(0, 0, 0, .3) inset;
        -webkit-animation-name: 'ripple';
        /*动画属性名，也就是我们前面keyframes定义的动画名*/
        -webkit-animation-duration: 1s;
        /*动画持续时间*/
        -webkit-animation-timing-function: ease;
        /*动画频率，和transition-timing-function是一样的*/
        -webkit-animation-delay: 0s;
        /*动画延迟时间*/
        -webkit-animation-iteration-count: infinite;
        /*定义循环资料，infinite为无限次*/
        -webkit-animation-direction: normal;
        /*定义动画方式*/
    }

    @keyframes ripple {
        0% {
            left: 5px;
            top: 5px;
            opcity: 75;
            width: 0;
            height: 0;
        }

        100% {
            left: -20px;
            top: -20px;
            opacity: 0;
            width: 50px;
            height: 50px;
        }
    }
</style>
<div class="container">
    <div class="row row-cols-1 row-cols-md-2">
        <div class="col lg-6">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <div class="row row-cols-2 row-cols-md-2">
                        <div class="col lg-4 md-4">
                            <span id="train_no"></span>
                        </div>
                        <div class="col lg-8 md-8" style="text-align: end">
                            <span id="train_name"></span>
                        </div>
                    </div>
                    <br>
                    <div class="row row-cols-3">
                        <div class="col lg-4 xs-4 justify-content-md-center">
                            <center><span id="source"></span></center>
                        </div>
                        <div class="col lg-4 xs-4 justify-content-md-center">
                            <img id="arrow" src="/img/arrowright.png" alt="" srcset="">
                        </div>
                        <div class="col lg-4 xs-4 justify-content-md-center">
                            <center><span id="destination"></span></center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col lg-6">
            <div class="card shadow p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-1">
                        <div class="col lg-12 md-12">
                            <div class="example">
                                <p>Live</p>
                                <div class="dot"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#train_no').hide();
    $('#train_name').hide();
    var socket = io();
    socket.emit('get_train_status',
        `{ "train_no" : "<%= req.params.train_no %>", "start_date" : "<%=req.query.startDate%>" }`);
    socket.on("<%= req.params.train_no %>", function (trainDetails) {
        console.log(trainDetails);
    });
    $(document).ready(() => {
        $.ajax({
            url: `/api/v1/train/<%= req.params.train_no %>`,
            type: 'GET',
            dataType: 'json', // added data type
            success: function (res) {
                $('#train_no').show()
                $('#train_name').show()
                $('#train_no').text(res.trainNo)
                $('#train_name').text(res.trainName)
                $('#source').text(res.trainSchedule[0].stnCode)
                $('#destination').text(res.trainSchedule[res.trainSchedule.length - 1].stnCode);
                console.log(res);
            }
        });
    })
</script>